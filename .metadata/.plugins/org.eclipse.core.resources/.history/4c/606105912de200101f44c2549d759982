import java.util.Arrays;

class pra2 {

	public int solution(int a, int b, boolean flag) {
        int answer = 0;
        
        if(flag) {
        	answer = a + b;
        }else {
        	answer = a - b;
        }
        
        return answer;
    }

	public static void main(String[] args) {

		pra2 p = new pra2();

		System.out.println(p.solution(-4, 7, true));

	}

}
